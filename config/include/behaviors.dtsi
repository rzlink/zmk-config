#define TAPPING_TERM 280
#define QUICK_TAP_TERM 175


ht: hold_tap {
    label = "hold_tap";
    compatible = "zmk,behavior-hold-tap";
    #binding-cells = <2>;
    flavor = "balanced";
    tapping-term-ms = <TAPPING_TERM>;
    quick-tap-ms = <QUICK_TAP_TERM>;
    require-prior-idle-ms = <150>;
    global-quick-tap;
    bindings = <&kp>, <&kp>;
};

// Positional hold-tap for left-hand shift keys (triggers on right-hand keys only)
ht_shift_l: hold_tap_shift_left {
    label = "hold_tap_shift_left";
    compatible = "zmk,behavior-hold-tap";
    #binding-cells = <2>;
    flavor = "balanced";
    tapping-term-ms = <TAPPING_TERM>;
    quick-tap-ms = <QUICK_TAP_TERM>;
    require-prior-idle-ms = <150>;
    hold-trigger-key-positions = <6 7 8 9 10 11 18 19 20 21 22 23 30 31 32 33 34 35 39 40 41>;
    hold-trigger-on-release;
    bindings = <&kp>, <&kp>;
};

// Positional hold-tap for right-hand shift keys (triggers on left-hand keys only)
ht_shift_r: hold_tap_shift_right {
    label = "hold_tap_shift_right";
    compatible = "zmk,behavior-hold-tap";
    #binding-cells = <2>;
    flavor = "balanced";
    tapping-term-ms = <TAPPING_TERM>;
    quick-tap-ms = <QUICK_TAP_TERM>;
    require-prior-idle-ms = <150>;
    hold-trigger-key-positions = <0 1 2 3 4 5 12 13 14 15 16 17 24 25 26 27 28 29 36 37 38>;
    hold-trigger-on-release;
    bindings = <&kp>, <&kp>;
};

mo_sl: behavior_mo_sl {
    label = "mo_sl";
    compatible = "zmk,behavior-hold-tap";
    #binding-cells = <2>;
    flavor = "hold-preferred";
    tapping-term-ms = <TAPPING_TERM>;
    quick-tap-ms = <QUICK_TAP_TERM>;
    bindings = <&mo>, <&sl>;
};